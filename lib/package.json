{
  "name": "joycon2.js",
  "version": "0.1.0",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.ts && vite build --config vite.bridge.config.ts",
    "build:types": "tsc -p tsconfig.json",
    "build:with-types": "npm run build && npm run build:types && echo 'lib build complete'",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src"
  },
  "devDependencies": {
    "vite": "latest",
    "typescript": "latest",
    "eslint": "latest",
    "prettier": "latest"
  }
}
